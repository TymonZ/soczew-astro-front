            <h1 class="flex flex-col sm:flex-wrap gap-3">
                <span class="w-fit px-2 font-display text-2xl text-white bg-black hover:bg-kitch-red">
                    PAST EVENTS
                </span>
            </h1>
            <div class="w-full lg:w-[1000px] flex flex-wrap items-start justify-start gap-5">
                {EVENTS.slice(0).reverse().map((event)=>
                    <EventCard event={event} />
                )}  
            </div>
         </section>
